@article{burchfielCharacteristicsAssociatedRapid1996,
  title = {Characteristics Associated with Rapid Decline in Forced Expiratory Volume},
  author = {Burchfiel, Cecil M. and Marcus, Ellen B. and Sharp, Dan S. and Enright, Paul L. and Rodriguez, Beatriz L. and Masaki, Kamal H. and Hwang, Lie-Ju and Curb, J. David},
  year = 1996,
  month = may,
  journal = {Annals of Epidemiology},
  volume = {6},
  number = {3},
  pages = {217--227},
  issn = {1047-2797},
  doi = {10.1016/1047-2797(96)00007-5},
  urldate = {2026-01-25},
  abstract = {Cigarette smoking is known to accelerate decline of pulmonary function; however, the role of other factors is less clear. Characteristics of individuals who experienced rapid decline in forced expiratory volume in 1-sec (FEV1) were examined in 4451 Japanese-American men from the Honolulu Heart Program who were aged 45 to 68 years at baseline (1965--1968) and who produced three acceptable FEV1 measures over a 6-year period. Average annual rates of FEV1 decline were calculated by use of within-person regression and were categorized as rapid (â©¾ 60 ml/y), moderate (30 to 59 ml/y) or slow ({$<$} 30 ml/y). Lifestyle and biologic factors were compared by FEV1 decline categories after adjustment for age. A logistic regression model showed that continued smoking during follow-up, cigarette pack-years, wheezing, coronary heart disease, alcohol intake, and reduced subscapular skinfold were significantly associated with rapid FEV1 decline, after adjustment for age, height, cholesterol, an indicator of Japanese diet, and education. When analyses were restricted to continuous smokers, cigarette pack-years, wheezing, and reduced subscapular skinfold were found to be independent predictors. Among never smokers, lower educational attainment was a predictor of rapid FEV1 decline, and the association involving subscapular skinfold approached significance (P {$<$} 0.07). These characteristics may be useful in identifying subgroups of the population who are at increased risk of accelerated decline in pulmonary function and thus would be most likely to benefit from appropriate intervention.},
  keywords = {Asian-Americans,cigarette smoking,cohort study,forced expiratory volume,pulmonary disease,risk factors},
  file = {C:\Users\79167\Zotero\storage\NWTAZSS8\1047279796000075.html}
}

